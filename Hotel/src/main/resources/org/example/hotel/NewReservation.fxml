<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.Integer?>
<VBox prefHeight="500.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.NewReservationController">
    <padding>
        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
    </padding>
        <Label text="Wprowadź dane pobytu">
            <font>
                <Font size="16.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <VBox spacing="5.0">
                <Label text="Ilość dób hotelowych:" />
                <TextField fx:id="dayCountTextField" editable="false" focusTraversable="false" prefWidth="150.0" text="0" />
        </VBox>

        <GridPane vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>

                <VBox spacing="5.0">
                        <Label text="Od:" />
                        <DatePicker fx:id="datePickerFrom" editable="false" maxWidth="1.7976931348623157E308" onAction="#daysCountRefresh" />
                </VBox>

                <VBox spacing="5.0" GridPane.rowIndex="1">
                        <Label text="Do:" />
                        <DatePicker fx:id="datePickerTo"  editable="false" maxWidth="1.7976931348623157E308" onAction="#daysCountRefresh" />
                </VBox>

                <VBox spacing="5.0" GridPane.rowIndex="2">
                        <Label text="Gość:" />
                        <HBox spacing="10.0">
                                <ComboBox fx:id="guestComboBox" maxWidth="1.7976931348623157E308" promptText="Imię i Nazwisko gościa" HBox.hgrow="ALWAYS" />
                                <Button minWidth="100.0" mnemonicParsing="false" text="Dodaj gościa" onAction="#openNewGuestWindow" />
                        </HBox>
                </VBox>

                <VBox spacing="5.0" GridPane.rowIndex="3">
                        <HBox spacing="10.0">
                                <VBox spacing="5.0" prefWidth="50.0" minWidth="80.0" maxWidth="50.0">
                                        <Label text="Pietro:" />
                                        <ComboBox fx:id="floorComboBox" maxWidth="1.7976931348623157E308" onAction="#roomComboBoxRefresh"/>
                                </VBox>

                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                        <Label text="Pokój:" />
                                        <ComboBox fx:id="roomComboBox" onAction="#priceRefresh" maxWidth="1.7976931348623157E308"  />
                                </VBox>
                        </HBox>
                </VBox>

                <VBox spacing="10.0" GridPane.rowIndex="4">
                        <Label text="Dodatki:" />

                        <CheckBox fx:id="spaCheckBox" mnemonicParsing="false" text="Dodaj wejście do SPA (SpaEntry)" onAction="#priceRefresh" />
                        <fx:define>
                            <ToggleGroup fx:id="spaDurationGroup" />
                        </fx:define>
                        <HBox spacing="15.0" fx:id="spaDurationContainer">
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                                <RadioButton mnemonicParsing="false" selected="true" text="30 min" toggleGroup="$spaDurationGroup" onAction="#priceRefresh">
                                    <userData>
                                        <Integer fx:value="30" />
                                    </userData>
                                </RadioButton>

                                <RadioButton  mnemonicParsing="false" text="1h" toggleGroup="$spaDurationGroup" onAction="#priceRefresh">
                                    <userData>
                                        <Integer fx:value="60" />
                                    </userData>
                                </RadioButton>

                                <RadioButton  mnemonicParsing="false" text="2h" toggleGroup="$spaDurationGroup" onAction="#priceRefresh">
                                    <userData>
                                        <Integer fx:value="120" />
                                    </userData>
                                </RadioButton>
                        </HBox>

                        <CheckBox fx:id="mealPackageCheckBox" mnemonicParsing="false" text="Dodaj pakiet wyżywienia (MealPackage)" onAction="#priceRefresh"/>
                        <CheckBox fx:id="vegetarianCheckBox"  mnemonicParsing="false" text="Wegetariański" onAction="#priceRefresh">
                            <VBox.margin>
                                <Insets left="20.0" />
                            </VBox.margin>
                        </CheckBox>
                </VBox>
        </GridPane>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Koszt:">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="priceTextField" editable="false" prefWidth="150.0" text="0.00 PLN" />
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>

        <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="okButton" minWidth="100.0" mnemonicParsing="false" prefHeight="30.0" text="OK" onAction="#addReservation"/>
                <Button minWidth="100.0" mnemonicParsing="false" prefHeight="30.0" text="Cancel" onAction="#cancelReservation" />
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </HBox>
</VBox>
