<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.HelloController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="System Rezerwacji Hotelu" />

    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 10; -fx-background-radius: 10;">
        <VBox spacing="5">
            <Label text="Wybierz piętro:" />
            <ComboBox fx:id="floorComboBox" prefWidth="150" />
        </VBox>

        <VBox spacing="5">
            <Label text="Data podglądu:" />
            <DatePicker fx:id="viewDatePicker" />
        </VBox>

        <Button onAction="#openNewReservationWindow" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="Zarezerwuj" />
    </HBox>

    <Separator />

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
        <FlowPane fx:id="roomsContainer" alignment="CENTER" hgap="15" prefWrapLength="600" vgap="15">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
        </FlowPane>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="20">
        <Label style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" text="■ Wolny" />
        <Label style="-fx-text-fill: #c0392b; -fx-font-weight: bold;" text="■ Zajęty" />
    </HBox>
</VBox>
