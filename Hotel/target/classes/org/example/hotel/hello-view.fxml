<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.hotel.HelloController" style="-fx-background-color: #f0f2f5;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="System Rezerwacji Hotelu" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <HBox spacing="20" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 10; -fx-background-radius: 10;">
        <VBox spacing="5">
            <Label text="Wybierz piętro:"/>
            <ComboBox fx:id="floorComboBox" prefWidth="150"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Data podglądu:"/>
            <DatePicker fx:id ="viewDatePicker"/>
        </VBox>

        <Button text="Zarezerwuj" onAction="#handleOpenBookingDialog" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>

    <Separator/>

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
        <FlowPane  fx:id = "roomsContainer" hgap="15" vgap="15" alignment="CENTER" prefWrapLength="600">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>
        </FlowPane>
    </ScrollPane>

    <HBox spacing="20" alignment="CENTER">
        <Label text="■ Wolny" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
        <Label text="■ Zajęty" style="-fx-text-fill: #c0392b; -fx-font-weight: bold;"/>
    </HBox>
</VBox>